{
  "name": "@monogatari/core",
  "version": "2.0.0-alpha.2",
  "main": "./dist/engine/monogatari.js",
  "module": "./core/index.js",
  "description": "Monogatari is a simple web visual novel engine created to bring Visual Novels to the web.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Monogatari/Monogatari.git"
  },
  "author": "Diego Islas Ocampo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Monogatari/Monogatari/issues"
  },
  "homepage": "https://monogatari.io",
  "scripts": {
    "start": "parcel serve index.html --open --no-cache",
    "build": "parcel build ./src/index.html",
    "build:core": "yarn run build:js && yarn build:css",
    "build:js": "parcel build ./core/index.js --global Monogatari --out-file monogatari.js --out-dir dist/engine --no-cache --public-url .",
    "build:debug": "parcel build ./debug/index.js --global MonogatariDebug --out-file debug.js --out-dir dist/engine --no-cache --public-url .",
    "build:css": "parcel build ./core/index.css --out-file monogatari.css --out-dir dist/engine --no-cache --no-source-maps",
    "eslint": "eslint ./core/index.js ./core/actions/* ./core/translations/*",
    "watch:js": "parcel watch ./core/index.js --global Monogatari --out-file monogatari.js --out-dir dist/engine --no-cache --public-url .",
    "watch:css": "parcel watch ./core/index.css --out-file monogatari.css --out-dir dist/engine --no-cache --no-source-maps"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "autoprefixer": "^9.5.0",
    "eslint": "^5.15.3",
    "htmlhint": "^0.11.0",
    "jsdoc": "^3.5.5",
    "parcel": "^1.12.3",
    "postcss-calc": "^7.0.1",
    "precss": "^4.0.0",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0"
  },
  "dependencies": {
    "@aegis-framework/artemis": "^0.3.17",
    "@aegis-framework/kayros.css": "^0.4.2",
    "@fortawesome/fontawesome-free": "^5.8.1",
    "animate.css": "^3.6.1",
    "deeply": "^3.0.0",
    "electron": "^4.1.1",
    "moment": "^2.24.0",
    "mousetrap": "^1.6.3",
    "particles.js": "^2.0.0",
    "typed.js": "^2.0.10"
  },
  "files": [
    "index.js",
    "core/*",
    "dist/*"
  ]
}
